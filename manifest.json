{
  "name": "NoBlockage",
  "description": "Bypass any paywall.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/noblockage16.png",
      "32": "/images/noblockage32.png",
      "48": "/images/noblockage48.png",
      "128": "/images/noblockage128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "icons": {
    "16": "/images/noblockage16.png",
    "32": "/images/noblockage32.png",
    "48": "/images/noblockage48.png",
    "128": "/images/noblockage128.png"
  }
}
